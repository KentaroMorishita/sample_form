{% extends 'layout.twig' %}
{% block title %}コンタクト{% endblock %}
{% block content %}

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Title</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for item in contacts %}
            <tr>
                <td>{{ item.name }}</td>
                <td>{{ item.email }}</td>
                <td>{{ item.title }}</td>
                <td>
                    <a href="/contact/show?id={{ item.id }}">
                        <button class="btn btn-info btn-sm">Show</button>
                    </a>
                    <a href="/contact/edit?id={{ item.id }}">
                        <button class="btn btn-primary btn-sm">Edit</button>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock content %}